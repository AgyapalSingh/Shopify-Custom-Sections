<link rel="stylesheet" href="{{ 'custom-css-by-aujla.css' | asset_url }}">
{{ 'custom-js-by-aujla.js' | asset_url | script_tag }}

<div class="custom-responsive-accordion-wrapper">
  {% for block in section.blocks %}
    <div class="custom-responsive-accordion-item">
      <button class="custom-responsive-accordion-header">
        {{ block.settings['custom-responsive-accordion-title'] }}
        <span class="custom-accordion-add-icon">+</span>
      </button>
      <div class="custom-responsive-accordion-content">
        {{ block.settings['custom-responsive-accordion-content'] }}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Accordion By Aujla",
  "tag": "section",
  "class": "custom-responsive-accordion",
  "blocks": [
    {
      "name": "Add New Accordion",
      "type": "custom-accordion",
      "settings": [
        {
          "type": "text",
          "id": "custom-responsive-accordion-title",
          "label": "Accordion Title",
          "default": "Sample Accordion Title",
        },
        {
          "type": "richtext",
          "id": "custom-responsive-accordion-content",
          "label": "Accordion Content",
          "default": "<p>This is a sample content for preview purposes.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Accordion By Aujla"
    }
  ]
}
{% endschema %}
